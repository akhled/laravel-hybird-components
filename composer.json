{
    "name": "akhaled/laravel-hybrid-components",
    "description": "Use Laravel components built with Tailwind and Livewire",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Amro Khaled",
            "email": "hi@amrography.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/support": ">=8.0.0",
        "illuminate/view": ">=8.0.0",
        "livewire/livewire": "^2.3"
    },
    "require-dev": {
        "orchestra/testbench": ">=6.0.0",
        "phpunit/phpunit": "~9.0.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Akhaled\\HybridComponents\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Akhaled\\HybridComponents\\Tests\\": [
                "tests"
            ]
        }
    },
    "scripts": {
        "test": "clear && phpunit"
    }
}
