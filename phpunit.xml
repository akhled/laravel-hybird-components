<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="false"
        backupStaticAttributes="false"
        bootstrap="vendor/autoload.php"
        colors="true"
        processIsolation="false"
        stopOnFailure="true"
>
    <testsuites>
        <testsuite name="Available Laravel hybrid component">
            <directory suffix="Test.php">./tests/Available</directory>
        </testsuite>
        <testsuite name="UI checks for Laravel hybrid component">
            <directory suffix="Test.php">./tests/UI</directory>
        </testsuite>
    </testsuites>
</phpunit>
